<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Parkhaus.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Parkhaus.Views"
       Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Einfahrt">
            <ShellContent ContentTemplate="{DataTemplate views:EntryPage}" />
        </Tab>

        <Tab Title="Bezahlen">
            <ShellContent ContentTemplate="{DataTemplate views:PaymentPage}" />
        </Tab>

        <Tab Title="Ausfahrt">
            <ShellContent ContentTemplate="{DataTemplate views:ExitPage}" />
        </Tab>
    </TabBar>

</Shell>