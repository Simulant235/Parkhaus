<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parkhaus.Views.EntryPage"
             Title="Fahrzeug Einfahrt">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <Label Text="Kennzeichen eingeben"
               FontSize="24"
               HorizontalOptions="Center" />

        <Entry x:Name="LicenseEntry"
               Placeholder="z.B. ZH 123456"
               FontSize="18"
               HorizontalOptions="Fill" />

        <Button Text="Einparken"
                Clicked="OnParkInClicked"
                BackgroundColor="#2B3C50"
                TextColor="White"
                HeightRequest="50" />

        <Label x:Name="StatusLabel"
               TextColor="Red"
               HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>