<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parkhaus.Views.EntryPage"
             Title="Einfahrt">

    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

        <!-- Parkhausname -->
        <Label Text="Parkhaus Zentrum"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#2B3C50" />

        <!-- Freie Plätze Anzeige -->
        <Border Stroke="#2B3C50"
                StrokeThickness="2"
                Padding="15"
                Background="#F5F5F5">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="5">
                <Label Text="Verfügbare Parkplätze"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="#666" />
                <Label x:Name="AvailableSpotsLabel"
                       Text="-- von 20"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#2B3C50" />
            </VerticalStackLayout>
        </Border>

        <!-- Kennzeichen Eingabe -->
        <Label Text="Kennzeichen eingeben"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,20,0,0" />

        <Entry x:Name="LicenseEntry"
               Placeholder="z.B. ZH 123456"
               FontSize="18"
               HorizontalOptions="Fill"
               HorizontalTextAlignment="Center" />

        <!-- Einfahrt Button -->
        <Button Text="Einfahrt"
                Clicked="OnParkInClicked"
                BackgroundColor="#2B3C50"
                TextColor="White"
                HeightRequest="50"
                FontSize="18"
                CornerRadius="10" />

        <!-- Status Label -->
        <Label x:Name="StatusLabel"
               TextColor="Red"
               FontSize="16"
               HorizontalOptions="Center"
               Margin="0,10,0,0" />

    </VerticalStackLayout>
</ContentPage>