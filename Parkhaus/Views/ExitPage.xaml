<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parkhaus.Views.ExitPage"
             Title="Ausfahrt">

    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

        <!-- Titel -->
        <Label Text="Ausfahrt"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#2B3C50" />

        <!-- Kennzeichen Eingabe -->
        <Label Text="Kennzeichen eingeben"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,20,0,0" />

        <Entry x:Name="LicenseEntry"
               Placeholder="z.B. ZH 123456"
               FontSize="18"
               HorizontalOptions="Fill"
               HorizontalTextAlignment="Center" />

        <!-- Ausfahren Button -->
        <Button Text="Ausfahren"
                Clicked="OnExitClicked"
                BackgroundColor="#2B3C50"
                TextColor="White"
                HeightRequest="50"
                FontSize="18"
                CornerRadius="10" />

        <!-- Status Label -->
        <Label x:Name="StatusLabel"
               FontSize="16"
               HorizontalOptions="Center"
               Margin="0,10,0,0" />

    </VerticalStackLayout>
</ContentPage>
